{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}